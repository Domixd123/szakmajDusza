<Window x:Class="szakmajDusza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:szakmajDusza"
        mc:Ignorable="d"
        Title="Damareen" Height="1080" Width="1920" WindowState="Maximized" FontSize="30">
    <Grid>
        <Grid Name="PakliOssze_Grid" Visibility="Collapsed">
            <WrapPanel Name="Cards_Wrap" Margin="0,34,0,560"/>
            <WrapPanel x:Name="PlayerCards_Wrap" Margin="0,675,0,0"/>
            <Label FontSize="50" Content="Kiválasztottak:" HorizontalAlignment="Center" Margin="0,504,0,0" VerticalAlignment="Top"/>
            <Button Name="ConfirmPakli_Button" Content="Tovább" HorizontalAlignment="Left" Margin="1293,509,0,0" VerticalAlignment="Top" Width="315" Height="85" Click="ConfirmPakli_Button_Click"/>
        </Grid>
        <Grid Name="MainRoom_Grid" Visibility="Visible">
            <WrapPanel Name="PakliCards_Wrap" Margin="10,594,-10,0"/>
            <Button Name="Egyszeri_Button" Content="Barlangi portya" HorizontalAlignment="Left" Margin="150,142,0,0" VerticalAlignment="Top" Height="335" Width="500" Click="Egyszeri_Button_Click"/>
            <Button Name="Kis_Button" Content="Ősi Szentély" HorizontalAlignment="Center" Margin="0,142,0,0" VerticalAlignment="Top" Height="335" Width="400" Click="Kis_Button_Click"/>
            <Button Name="Nagy_Button" Content="A mélység királynője" HorizontalAlignment="Right" Margin="0,142,150,0" VerticalAlignment="Top" Height="335" Width="500" Click="Nagy_Button_Click"/>

        </Grid>

        <Grid Name="EgyszeriKazamata_Grid" Visibility="Collapsed">

        </Grid>

        <Grid Name="KisKazamata_Grid" Visibility="Collapsed">

        </Grid>

        <Grid Name="NagyKazamata_Grid" Visibility="Collapsed">

        </Grid>
    </Grid>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#28203A" Offset="0"/>
                        <GradientStop Color="#46325A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="Black" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#503C78" Offset="0"/>
                                <GradientStop Color="#785AA0" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#14141A" Offset="0"/>
                    <GradientStop Color="#322C3C" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    </Window.Resources>
</Window>
    
