<Window x:Class="szakmajDusza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:szakmajDusza"
        mc:Ignorable="d"
        Title="Damareen" Height="1080" Width="1920" WindowState="Maximized" FontSize="30">
    <Viewbox Stretch="Fill" StretchDirection="Both">
        <Grid Height="1080" Width="1920">
            <Grid Name="Menu_Grid" Visibility="Collapsed">
                <Button FontSize="60" Name="GoToGame_Button" Content="Játékos mód" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Width="1056" Height="150" Click="GoToGame_Button_Click"/>
                <Button FontSize="60" Name="GoToMaster_Button" Content="Játékmester mód" HorizontalAlignment="Center" VerticalAlignment="Top" Width="1056" Height="150" Margin="0,350,0,0" Click="GoToMaster_Button_Click"/>
                <Button FontSize="60" Name="GoToOptions_Button" Content="Beállítások" HorizontalAlignment="Center" Margin="0,540,0,0" VerticalAlignment="Top" Width="1056" Height="132" Click="GoToOptions_Button_Click"/>
                <Button FontSize="60" Name="Exit_Button" Content="Kilépés" HorizontalAlignment="Center" Margin="0,160,0,160" VerticalAlignment="Bottom" Width="724" Height="132" Click="Exit_Button_Click"/>


            </Grid>

            <Grid Name="JatekMester_Grid" Visibility="Collapsed">
                <ListBox x:Name="KornyezetekMester_List" Margin="0,0,960,0"/>
                <Button Name="AddKornyezet_Button" Content="Hozzáadás" HorizontalAlignment="Left" Margin="1240,250,0,0" VerticalAlignment="Top" Width="400" Height="100" FontSize="50" Click="AddKornyezet_Button_Click"/>
                <Button Name="ModifyKornyezet_Button" Content="Módosítás" HorizontalAlignment="Left" Margin="1240,490,0,0" VerticalAlignment="Top" Width="400" Height="100" FontSize="50" Click="ModifyKornyezet_Button_Click"/>
                <Button Name="DeleteKornyezet_Button" Content="Törlés" HorizontalAlignment="Left" Margin="1240,674,0,250" VerticalAlignment="Bottom" Width="400" Height="100" FontSize="50" Click="DeleteKornyezet_Button_Click"/>

            </Grid>

            <Grid Name="ChooseKornyezet_Grid" Visibility="Visible">
                <ListBox x:Name="KornyezetekJatekos_List" Margin="0,0,960,0"/>
                <Button Name="PlayInKornyezet" Content="Kiválasztás" HorizontalAlignment="Left" Margin="1240,400,0,0" VerticalAlignment="Top" FontSize="60" Height="100" Width="400" Click="PlayInKornyezet_Click"/>
                <Button Click="BackToMenu_Click" Content="Vissza" HorizontalAlignment="Left" Margin="1240,0,0,400" VerticalAlignment="Bottom" FontSize="60" Height="100" Width="400"/>
            </Grid>
            
            <Grid Name="Options_Grid" Visibility="Collapsed">

                <StackPanel Orientation="Vertical" Margin="40" HorizontalAlignment="Center" VerticalAlignment="Center" Width="900">


                    <StackPanel Orientation="Horizontal" Margin="0 20">
                        <TextBlock Text="Hangeffektek:" Foreground="Gold" FontSize="60"
                       Width="406" VerticalAlignment="Center"/>
                        <RadioButton Content="Be" GroupName="SFX" FontSize="60"
                         Margin="0 0 30 0" Foreground="Gold" Checked="SFX_On"/>
                        <RadioButton Checked="SFX_Off" Content="Ki" GroupName="SFX" FontSize="60"
                         Foreground="Gold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 20">
                        <TextBlock Text="Hangerő:" Foreground="Gold" FontSize="60"
                       Width="298" VerticalAlignment="Center"/>
                        <Slider Name="Sl" Minimum="0" Maximum="100" Width="300" Value="50"
                    Height="30" ValueChanged="Slider_ValueChanged"/>
                    </StackPanel>

                </StackPanel>
                <Button Click="BackToMenu_Click" Content="Vissza" HorizontalAlignment="Center" Margin="0,790,0,0" VerticalAlignment="Top" FontSize="60" Width="768" Height="120"/>

                <Grid.Resources>
                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                    <Style TargetType="RadioButton">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RadioButton">
                                    <StackPanel Orientation="Horizontal">
                                        <Grid Width="28" Height="28" Margin="5">
                                            <Ellipse Stroke="Gold" StrokeThickness="3"/>
                                            <Ellipse Fill="Gold" Margin="6" Visibility="{Binding IsChecked, 
                                RelativeSource={RelativeSource TemplatedParent},
                                Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </Grid>

                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </StackPanel>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="Gold"/>
                        <Setter Property="FontSize" Value="28"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </Grid.Resources>
            </Grid>



            <Grid Name="PakliOssze_Grid" Visibility="Collapsed">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="335*"/>
                    <RowDefinition Height="197*"/>
                </Grid.RowDefinitions>
                <WrapPanel Name="Cards_Wrap" Margin="100,102,100,171"/>
                <WrapPanel x:Name="PlayerCards_Wrap" Margin="100,5,100,0" Grid.Row="1"/>
                <Label FontSize="50" Content="Pakli:" HorizontalAlignment="Left" Margin="100,504,0,0" VerticalAlignment="Top"/>
                <Button Name="ConfirmPakli_Button" Content="Tovább" HorizontalAlignment="Left" Margin="1293,504,0,0" VerticalAlignment="Top" Width="315" Height="85" Click="ConfirmPakli_Button_Click"/>
                <Label Name="SelectedCards_Label" FontSize="50" Content="0" HorizontalAlignment="Left" Margin="223,504,0,0" VerticalAlignment="Top"/>
                <Label FontSize="50" Name="SelectableCounter_Label" Content="" HorizontalAlignment="Left" Margin="259,504,0,0" VerticalAlignment="Top"/>
                <Label FontSize="50" Content="Gyűjtemény:" HorizontalAlignment="Left" Margin="100,25,0,0" VerticalAlignment="Top"/>
                <Button Click="GoToOptions_Button_Click" Content="Beállítások" HorizontalAlignment="Left" Height="77" Margin="1641,0,0,0" VerticalAlignment="Top" Width="279" FontSize="30"/>

            </Grid>
            <Grid Name="MainRoom_Grid" Visibility="Collapsed">
                <WrapPanel Name="PakliCards_Wrap" Margin="100,594,648,20"/>
                <Button Name="Barlangi_portya" Content="Barlangi portya" HorizontalAlignment="Left" Margin="150,142,0,0" VerticalAlignment="Top" Height="335" Width="500" Click="Egyszeri_Button_Click"/>
                <Button Name="Osi_szentely" Content="Ősi Szentély" HorizontalAlignment="Center" Margin="0,142,0,0" VerticalAlignment="Top" Height="335" Width="400" Click="Kis_Button_Click"/>
                <Button Name="A_melyseg_kiralynoje" Content="A mélység királynője" HorizontalAlignment="Right" Margin="0,142,150,0" VerticalAlignment="Top" Height="335" Width="500" Click="Nagy_Button_Click"/>
                <Button Name="PakliChange_Button" Content="Pakli megváltoztatása" HorizontalAlignment="Left" Margin="1464,768,0,0" VerticalAlignment="Top" Height="109" Width="306" Click="PakliChange_Button_Click"/>
                <Label Content="Kazamaták:" HorizontalAlignment="Left" Height="87" Margin="100,50,0,0" VerticalAlignment="Top" Width="320" FontSize="60"/>
                <Label Content="Pakli:" HorizontalAlignment="Left" Height="87" Margin="100,502,0,0" VerticalAlignment="Top" Width="320" FontSize="60"/>
                <Label Name="EveryCard_Label" Visibility="Collapsed" Foreground="Red" Content="Már minden kártyát megszereztél!" HorizontalAlignment="Left" Margin="1290,482,0,0" VerticalAlignment="Top"/>

            </Grid>

            <Grid Name="EgyszeriKazamata_Grid" Visibility="Collapsed" d:IsHidden="True">
                <Label Content="Játékos" FontSize="60" HorizontalAlignment="Left" Margin="144,116,0,0" VerticalAlignment="Top"/>
                <Label Content="Kazamata" FontSize="60" HorizontalAlignment="Right" Margin="0,116,144,0" VerticalAlignment="Top"/>
                <WrapPanel Name="FightPlayerEgyszeri_Wrap" Margin="115,263,1343,37" Width="400"/>
                <WrapPanel Name="FightKazamataEgyszeri_Wrap" Margin="1386,263,146,37" Width="400"/>
                <Label Name="DefendEgyszeri_Label" Content="Kazamata támad" Foreground="Red" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <Label Name="AttackEgyszeri_Label" Content="Játékos támad" Foreground="Green" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <Label Name="DefendDeployEgyszeri_Label" Content="Kazamata kijátszik" Foreground="Red" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <Label Name="AttackDeployEgyszeri_Label" Content="Játékos kijátszik" Foreground="Green" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <WrapPanel Name="FightPlayerAttackerEgyszeri_Wrap" Margin="740,310,965,362"/>
                <WrapPanel Name="FightKazamataAttackerEgyszeri_Wrap" Margin="960,310,746,362"/>
                <Button Name ="Harc" Content="Harc" HorizontalAlignment="Center" Height="100" Margin="0,650,0,0" VerticalAlignment="Top" Width="300" FontSize="60" Click="HarcE_Button_Click"/>
                <Button Name="Vissza" Content="Vissza" HorizontalAlignment="Center" Height="100" Margin="0,794,0,0" VerticalAlignment="Top" Width="300" FontSize="60" Click="Vissza_Button_Click"/>

                <Button Click="ChangeSpeed_Click" Content="Harc gyorsítása" HorizontalAlignment="Left" Height="77" Margin="1641,0,0,0" VerticalAlignment="Top" Width="279" FontSize="30"/>
                <Label Name="SpeedEgyszeri_Label" FontStyle="Oblique" FontSize="50" Content="1x" HorizontalAlignment="Left" Margin="1746,71,0,0" VerticalAlignment="Top"/>
            </Grid>

            <Grid Name="KisKazamata_Grid" Visibility="Visible" d:IsHidden="True">
                <WrapPanel Name="FightPlayerKis_Wrap" Margin="115,263,1343,37" Width="400"/>
                <WrapPanel Name="FightKazamataKis_Wrap" Margin="1386,263,146,37" Width="400"/>
                <Label Name="DefendKis_Label" Content="Kazamata támad" Foreground="Red" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <Label Name="AttackKis_Label" Content="Játékos támad" Foreground="Green" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <Label Name="DefendDeployKis_Label" Content="Kazamata kijátszik" Foreground="Red" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <Label Name="AttackDeployKis_Label" Content="Játékos kijátszik" Foreground="Green" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <WrapPanel Name="FightKis_Wrap" Margin="665,310,665,362"/>
                <WrapPanel Name="FightPlayerAttackerKis_Wrap" Margin="740,310,965,362"/>
                <WrapPanel Name="FightKazamataAttackerKis_Wrap" Margin="960,310,746,362"/>
                <Button x:Name ="HarcK" Content="Harc" HorizontalAlignment="Center" Height="100" Margin="0,650,0,0" VerticalAlignment="Top" Width="300" FontSize="60" Click="HarcK_Button_Click"/>
                <Button x:Name="VisszaK" Content="Vissza" HorizontalAlignment="Center" Height="100" Margin="0,794,0,0" VerticalAlignment="Top" Width="300" FontSize="60" Click="Vissza_Button_Click"/>
                <Button Click="ChangeSpeed_Click" Content="Harc gyorsítása" HorizontalAlignment="Left" Height="77" Margin="1641,0,0,0" VerticalAlignment="Top" Width="279" FontSize="30"/>
                <Label Name="SpeedKis_Label" FontStyle="Oblique" FontSize="50" Content="1x" HorizontalAlignment="Left" Margin="1746,71,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.515,2.395"/>
            </Grid>

            <Grid Name="NagyKazamata_Grid" Visibility="Collapsed" d:IsHidden="True">
                <WrapPanel Name="FightPlayerNagy_Wrap" Margin="115,263,1343,37" Width="400"/>
                <WrapPanel Name="FightKazamataNagy_Wrap" Margin="1386,263,146,37" Width="400"/>
                <Label Name="DefendNagy_Label" Content="Kazamata támad" Foreground="Red" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <Label Name="AttackNagy_Label" Content="Játékos támad" Foreground="Green" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <Label Name="DefendDeployNagy_Label" Content="Kazamata kijátszik" Foreground="Red" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <Label Name="AttackDeployNagy_Label" Content="Játékos kijátszik" Foreground="Green" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
                <WrapPanel Name="FightNagy_Wrap" Margin="665,310,665,362"/>
                <WrapPanel Name="FightPlayerAttackerNagy_Wrap" Margin="740,310,965,362"/>
                <WrapPanel Name="FightKazamataAttackerNagy_Wrap" Margin="960,310,746,362"/>
                <Button x:Name ="HarcN" Content="Harc" HorizontalAlignment="Center" Height="100" Margin="0,650,0,0" VerticalAlignment="Top" Width="300" FontSize="60" Click="HarcN_Button_Click"/>
                <Button x:Name="VisszaN" Content="Vissza" HorizontalAlignment="Center" Height="100" Margin="0,794,0,0" VerticalAlignment="Top" Width="300" FontSize="60" Click="Vissza_Button_Click"/>

                <Button Click="ChangeSpeed_Click" Content="Harc gyorsítása" HorizontalAlignment="Left" Height="77" Margin="1641,0,0,0" VerticalAlignment="Top" Width="279" FontSize="30"/>
                <Label Name="SpeedNagy_Label" FontStyle="Oblique" FontSize="50" Content="1x" HorizontalAlignment="Left" Margin="1746,71,0,0" VerticalAlignment="Top"/>
            </Grid>

        </Grid>
    </Viewbox>


    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="Gold"></Setter>
        </Style>



        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3C2A5E" Offset="0"/>
                        <GradientStop Color="#241B36" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Color="Black" Opacity="0.6"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                    Background="{TemplateBinding Background}" 
                    CornerRadius="15"
                    SnapsToDevicePixels="True">
                            <ContentPresenter 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Hover -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#5C47A1" Offset="0"/>
                                <GradientStop Color="#3A2A60" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>

                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="25" ShadowDepth="2" Color="#FFD9A600" Opacity="0.9"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Nyomva tartás -->
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#1F172D" Offset="0"/>
                                <GradientStop Color="#3B2C5A" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Tiltott állapot -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#14141A" Offset="0"/>
                        <GradientStop Color="#322C3C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Window">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#14141A" Offset="0"/>
                        <GradientStop Color="#322C3C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>
</Window>
    
