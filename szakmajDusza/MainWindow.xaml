<Window x:Class="szakmajDusza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:szakmajDusza"
        mc:Ignorable="d"
        Title="Damareen" Height="1080" Width="1920" WindowState="Maximized" FontSize="30">
    <Grid>
        <Grid Name="PakliOssze_Grid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="335*"/>
                <RowDefinition Height="197*"/>
            </Grid.RowDefinitions>
            <WrapPanel Name="Cards_Wrap" Margin="0,34,0,166"/>
            <WrapPanel x:Name="PlayerCards_Wrap" Margin="0,5,0,0" Grid.Row="1"/>
            <Label FontSize="50" Content="Kiválasztottak:" HorizontalAlignment="Left" Margin="100,504,0,0" VerticalAlignment="Top"/>
            <Button Name="ConfirmPakli_Button" Content="Tovább" HorizontalAlignment="Left" Margin="1293,509,0,0" VerticalAlignment="Top" Width="315" Height="85" Click="ConfirmPakli_Button_Click"/>
            <Label Name="SelectedCards_Label" FontSize="50" Content="0" HorizontalAlignment="Left" Margin="428,504,0,0" VerticalAlignment="Top"/>
            <Label FontSize="50" Content="/5" HorizontalAlignment="Left" Margin="465,504,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid Name="MainRoom_Grid" Visibility="Collapsed">
            <WrapPanel Name="PakliCards_Wrap" Margin="10,594,648,0"/>
            <Button Name="Egyszeri_Button" Content="Barlangi portya" HorizontalAlignment="Left" Margin="150,142,0,0" VerticalAlignment="Top" Height="335" Width="500" Click="Egyszeri_Button_Click"/>
            <Button Name="Kis_Button" Content="Ősi Szentély" HorizontalAlignment="Center" Margin="0,142,0,0" VerticalAlignment="Top" Height="335" Width="400" Click="Kis_Button_Click"/>
            <Button Name="Nagy_Button" Content="A mélység királynője" HorizontalAlignment="Right" Margin="0,142,150,0" VerticalAlignment="Top" Height="335" Width="500" Click="Nagy_Button_Click"/>
            <Button Name="PakliChange_Button" Content="Pakli megváltoztatása" HorizontalAlignment="Left" Margin="1464,768,0,0" VerticalAlignment="Top" Height="109" Width="306" Click="PakliChange_Button_Click"/>

        </Grid>

        <Grid Name="EgyszeriKazamata_Grid" Visibility="Visible">
            <Label Content="Játékos" FontSize="60" HorizontalAlignment="Left" Margin="144,116,0,0" VerticalAlignment="Top"/>
            <Label Content="Kazamata" FontSize="60" HorizontalAlignment="Right" Margin="0,116,144,0" VerticalAlignment="Top"/>
            <WrapPanel Name="FightPlayerEgyszeri_Wrap" Margin="115,263,1343,37" Width="400"/>
            <WrapPanel Name="FightKazamataEgyszeri_Wrap" Margin="1386,263,146,37" Width="400"/>
            <Label Name="DefendEgyszeri_Label" Content="Kazamata támad" Foreground="Red" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
            <Label Name="AttackEgyszeri_Label" Content="Játékos támad" Foreground="Green" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
            <WrapPanel Name="FightPlayerAttackerEgyszeri_Wrap" Margin="740,310,965,362"/>
            <WrapPanel Name="FightKazamataAttackerEgyszeri_Wrap" Margin="960,310,746,362"/>

        </Grid>

        <Grid Name="KisKazamata_Grid" Visibility="Collapsed">
            <WrapPanel Name="FightPlayerKis_Wrap" Margin="115,263,1343,37" Width="400"/>
            <WrapPanel Name="FightKazamataKis_Wrap" Margin="1386,263,146,37" Width="400"/>
            <Label Name="DefendKis_Label" Content="Kazamata támad" Foreground="Red" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
            <Label Name="AttackKis_Label" Content="Játékos támad" Foreground="Green" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
            <WrapPanel Name="FightKis_Wrap" Margin="665,310,665,362"/>
            <WrapPanel Name="FightPlayerAttackerKis_Wrap" Margin="740,310,965,362"/>
            <WrapPanel Name="FightKazamataAttackerKis_Wrap" Margin="960,310,746,362"/>
        </Grid>

        <Grid Name="NagyKazamata_Grid" Visibility="Collapsed">
            <WrapPanel Name="FightPlayerNagy_Wrap" Margin="115,263,1343,37" Width="400"/>
            <WrapPanel Name="FightKazamataNagy_Wrap" Margin="1386,263,146,37" Width="400"/>
            <Label Name="DefendNagy_Label" Content="Kazamata támad" Foreground="Red" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
            <Label Name="AttackNagy_Label" Content="Játékos támad" Foreground="Green" FontSize="60" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top"/>
            <WrapPanel Name="FightNagy_Wrap" Margin="665,310,665,362"/>
            <WrapPanel Name="FightPlayerAttackerNagy_Wrap" Margin="740,310,965,362"/>
            <WrapPanel Name="FightKazamataAttackerNagy_Wrap" Margin="960,310,746,362"/>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="Gold"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3C2A5E" Offset="0"/>
                        <GradientStop Color="#241B36" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Color="Black" Opacity="0.6"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                    Background="{TemplateBinding Background}" 
                    CornerRadius="15"
                    SnapsToDevicePixels="True">
                            <ContentPresenter 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Hover -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#5C47A1" Offset="0"/>
                                <GradientStop Color="#3A2A60" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="25" ShadowDepth="2" Color="#FFD9A600" Opacity="0.9"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Nyomva tartás -->
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#1F172D" Offset="0"/>
                                <GradientStop Color="#3B2C5A" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Tiltott állapot -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#14141A" Offset="0"/>
                        <GradientStop Color="#322C3C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>
</Window>
    
