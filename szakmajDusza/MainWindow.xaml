    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="Gold"></Setter>
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Border Background="Transparent">
                            <!-- EZ TESZI KATTINTHATÓVÁ AZ EGÉSZET -->
                            <StackPanel Orientation="Horizontal">
                                <Grid Width="28" Height="28" Margin="5">
                                    <Ellipse Stroke="Gold" StrokeThickness="3"/>
                                    <Ellipse Fill="Gold" Margin="6"
                                     Visibility="{Binding IsChecked,
                                     Converter={StaticResource BooleanToVisibilityConverter},
                                     RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                                </Grid>

                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Height="30">

                            <!-- Track (pálya) -->
                            <Grid Margin="10,0">
                                <Rectangle x:Name="PART_TrackBackground"
                                   Height="20"
                                   RadiusX="3" RadiusY="3"
                                   Fill="#443300"/>

                                <!-- Töltött rész -->
                                <Rectangle x:Name="PART_TrackProgress"
                                   Height="20"
                                   RadiusX="3" RadiusY="3"
                                   Fill="Gold"
                                   HorizontalAlignment="Left"
                                   Width="0"/>
                            </Grid>

                            <!-- Hivatalos Track -->
                            <Track x:Name="PART_Track"
                           Height="20"
                           Margin="10,0"
                           IsDirectionReversed="False">

                                <!-- Kitöltött rész a Track-ben -->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge"
                                          Background="Transparent"
                                          IsHitTestVisible="False"/>
                                </Track.DecreaseRepeatButton>

                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge"
                                          Background="Transparent"
                                          IsHitTestVisible="False"/>
                                </Track.IncreaseRepeatButton>

                                <!-- THUMB (fogantyú) -->
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb"
                                   Width="20" Height="20"
                                   Background="Gold"
                                   BorderBrush="#CCAA00"
                                   BorderThickness="2"/>
                                </Track.Thumb>

                            </Track>

                        </Grid>

                        <!-- Progress animálása a Value alapján -->
                        <ControlTemplate.Triggers>





                            <!-- Hover Thumb -->
                            <Trigger SourceName="Thumb" Property="IsMouseOver" Value="True">

                                <Setter TargetName="Thumb" Property="BorderBrush" Value="White"/>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3C2A5E" Offset="0"/>
                        <GradientStop Color="#241B36" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Color="Black" Opacity="0.6"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                    Background="{TemplateBinding Background}" 
                    CornerRadius="15"
                    SnapsToDevicePixels="True">
                            <ContentPresenter 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Hover -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#5C47A1" Offset="0"/>
                                <GradientStop Color="#3A2A60" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>

                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="25" ShadowDepth="2" Color="#FFD9A600" Opacity="0.9"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Nyomva tartás -->
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#1F172D" Offset="0"/>
                                <GradientStop Color="#3B2C5A" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Tiltott állapot -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#14141A" Offset="0"/>
                        <GradientStop Color="#322C3C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Window">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#14141A" Offset="0"/>
                        <GradientStop Color="#322C3C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#1A1A22"/>
            <Setter Property="Padding" Value="10"/>

            <!-- Scrollbar style -->
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="10">
                            <ScrollViewer Focusable="False">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBoxItem stílus -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                        Background="#2B2338"
                        CornerRadius="10"
                        Padding="10">
                            <ContentPresenter/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" 
                                Value="#3C2A5E"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="20"
                                                  Opacity="0.6"
                                                  ShadowDepth="0"
                                                  Color="#FFD9A600"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Kijelölt elem -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#5C47A1" Offset="0"/>
                                            <GradientStop Color="#3A2A60" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="Gold"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



    </Window.Resources>
</Window>
    